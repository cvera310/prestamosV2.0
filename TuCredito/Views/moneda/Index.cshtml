@model IEnumerable<TuCredito.Models.moneda>

@{
    ViewBag.Title = "Index";
}

<h2>Monedas</h2>

<p>
    @Html.ActionLink("Nueva Moneda", "Create")
</p>
<table class="table table-striped table-hover">
    <tr class="active">
        <th>
            @Html.DisplayNameFor(model => model.mon_descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mon_pais)
        </th>
        <th>
            <p>Acciones</p>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.mon_descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mon_pais)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.mon_codigo }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.mon_codigo }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.mon_codigo })
        </td>
    </tr>
}

</table>
